{
  "name": "rowdy.nuss.io",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:cnuss/rowdy.nuss.io.git",
  "author": "Christian Nuss <https://github.com/cnuss>",
  "license": "MIT",
  "scripts": {
    "dev": "tsup --watch --onSuccess \"node dist/index.js\"",
    "build": "tsup",
    "start": "yarn build && node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=src",
    "test:integration": "jest --testPathPattern=tests"
  },
  "dependencies": {
    "accepts": "^1.3.8",
    "express": "^5.2.1",
    "github-markdown-css": "^5.8.1",
    "handlebars": "^4.7.8",
    "jose": "^6.1.3",
    "js-yaml": "^4.1.1",
    "marked": "^17.0.1",
    "pino": "^10.2.1",
    "pino-http": "^11.0.0",
    "ua-parser-js": "^2.0.7"
  },
  "devDependencies": {
    "@types/accepts": "^1.3.7",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.6",
    "@types/pino-http": "^6.1.0",
    "@types/supertest": "^6.0.3",
    "@types/ua-parser-js": "^0.7.39",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.32.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ],
      "^.+\\.m?jsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(marked|github-markdown-css|jose)/)"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "target": "node18",
    "format": [
      "cjs"
    ],
    "clean": true,
    "sourcemap": true,
    "minify": false,
    "loader": {
      ".hbs": "text",
      ".md": "text",
      ".css": "text",
      ".yaml": "text"
    }
  }
}
